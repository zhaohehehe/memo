<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.study</groupId>
  <artifactId>mvndemo</artifactId>
  <packaging>jar</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>mvndemo Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
	<properties>
		<maven.develop.targetPath>D:\Workspace\TEMP\webapp\target\webapp</maven.develop.targetPath>
	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/src/main/resources/META-INF/resources</directory>
									<filtering>true</filtering>
									<targetPath>${maven.develop.targetPath}</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/resources/com/bonc</directory>
									<filtering>true</filtering>
									<targetPath>${maven.develop.targetPath}\WEB-INF\classes\com\bonc</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/java</directory>
									<includes>
										<include>**/*.xml</include>
										<include>**/*.properties</include>
										<include>**/*.ftl</include>
										<include>**/*.txt</include>
										<include>**/*.sql</include>
										<include>**/*.xls</include>
										<include>**/*.xlsx</include>
										<include>**/*.tag</include>
										<include>**/*.htm</include>
										<include>**/*.html</include>
									</includes>
									<filtering>true</filtering>
									<targetPath>${maven.develop.targetPath}\WEB-INF\classes</targetPath>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<executions>
					<execution>
						<id>compile-local</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<outputDirectory>${maven.develop.targetPath}\WEB-INF\classes</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>compile-remote</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}</outputDirectory>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<encoding>utf-8</encoding>
					<fork>true</fork>
					<executable>${JAVA_HOME}/bin/javac</executable>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
