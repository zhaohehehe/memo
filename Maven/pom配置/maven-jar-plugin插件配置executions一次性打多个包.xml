<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.study</groupId>
  <artifactId>mvndemo</artifactId>
  <packaging>jar</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>mvndemo Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
    <build>
    	<defaultGoal>install</defaultGoal>
	  	<finalName>${project.artifactId}-${project.version}</finalName>
	  	<directory>${basedir}/target</directory>
	 	<sourceDirectory>${basedir}/src/main/java</sourceDirectory>
	  	<testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>
	  	<outputDirectory>${basedir}/target/classes</outputDirectory>
	  	<testOutputDirectory>${basedir}/target/test-classes</testOutputDirectory>
	  	<scriptSourceDirectory>${basedir}/src/main/scripts</scriptSourceDirectory>
	  	<resources>
      	  <resource>
        	<directory>${project.basedir}/src/main/java</directory>
        	<includes>
        		<include>**/*.xml</include>
        		<include>**/*.properties</include>
        		<include>**/*.java</include>
        	</includes>
      	</resource>
      	<resource>
        	<directory>${project.basedir}/src/main/resources</directory>
        	<includes>
        		<include>**/*.xml</include>
        		<include>**/*.properties</include>
        		<include>**/*.js</include>
        	</includes>
      	</resource>
      	<resource>
				<directory>${project.basedir}/src/main/lib</directory>
				<includes>
					<include>**/*.jar</include>
				</includes>
		</resource>
      </resources>
      <testResources>
      	<testResource>
      		<directory>${project.basedir}/src/main/test</directory>
      	</testResource>
      </testResources>
       <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
    			<artifactId>maven-jar-plugin</artifactId>
    			<version>2.4</version>
                <executions>
                    <execution>
                        <id>component-po</id>
                        <goals><goal>jar</goal></goals>
                        <phase>package</phase>
                        <configuration>
    						<classifier>po</classifier>
    						<outputDirectory>D:\BONC-NewMVN3\output</outputDirectory>
    						<includes>
        						<include>com/bonc/dataplatform/meta/resource/resource/po/**/*</include>
        						<include>com/bonc/dataplatform/meta/resource/resource/dao/*IdGenerator*</include>
        					</includes>
    					</configuration>
                    </execution>
                    <execution>
                        <id>component-logic</id>
                        <goals><goal>jar</goal></goals>
                        <phase>package</phase>
                       	<configuration>
    						<classifier>logic</classifier>
    						<outputDirectory>D:\BONC-NewMVN3\output</outputDirectory>
    						<includes>
    							<include>com/bonc/dataplatform/meta/resource/resource/po/**/*</include>
    							<include>com/bonc/dataplatform/meta/resource/resource/dao/**/*</include>
    							<include>com/bonc/dataplatform/meta/resource/resource/bean/**/*</include>
    							<include>com/bonc/dataplatform/meta/resource/resource/logic/**/*</include>
    							<include>resourceDatabase/**/*</include>
    						</includes>
    						<excludes>
    							<exclude>resourceDatabase/struts*.xml</exclude>
    						</excludes>
    					</configuration>
                    </execution>
                     <execution>
                        <id>component-facade</id>
                        <goals><goal>jar</goal></goals>
                        <phase>package</phase>
                       	<configuration>
    						<classifier>facade</classifier>
    						<outputDirectory>D:\BONC-NewMVN3\output</outputDirectory>
    						<includes>
    							<include>com/bonc/dataplatform/meta/resource/resource/**/*</include>
    							<include>resourceDatabase/**/*</include>
    							<include>resources/**/*</include>
    						</includes>
    					</configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
    				<groupId>org.apache.maven.plugins</groupId>
    				<artifactId>maven-compiler-plugin</artifactId>
    				<configuration>
    						<source>1.7</source>
    						<target>1.7</target>
    						<encoding>UTF-8</encoding>
    				</configuration>
    		</plugin>
        </plugins>
    </build>
</project>
