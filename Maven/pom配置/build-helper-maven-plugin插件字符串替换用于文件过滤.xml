<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId></groupId>
	<artifactId></artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name></name>
	 <build>
      <plugins>
    	<plugin>
        	<groupId>org.codehaus.mojo</groupId>
        	<artifactId>build-helper-maven-plugin</artifactId>
        	<version>1.8</version>
        	<executions>
          		<execution>
            		<id>regex-property</id>
            		<phase>compile</phase>
            		<goals>
              			<goal>regex-property</goal>
            		</goals>
            		<configuration>
              			<name>exclude.dir</name>
              			<value>${project.artifactId}</value>
              			<regex>.*-</regex>
              			<replacement></replacement>
              			<failIfNoMatch>false</failIfNoMatch>
            		</configuration>
          		</execution>
        	</executions>
      	</plugin>
      	<plugin>
    		<groupId>org.apache.maven.plugins</groupId>
    		<artifactId>maven-compiler-plugin</artifactId>
    		<configuration>
    			<source>1.7</source>
    			<target>1.7</target>
    			<encoding>UTF-8</encoding>
    		</configuration>
    	</plugin>
	  </plugins>
	</build>
	<!-- profile -->
	<profiles>
		<profile>
			<id>component-po</id>
			<activation>
				<property>
					<name>component</name>
  					<value>po</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
    					<artifactId>maven-jar-plugin</artifactId>
    					<version>2.4</version>
    					<configuration>
    						<classifier>po</classifier>
    						<outputDirectory>D:\BONC-NewMVN3\output</outputDirectory>
    						<includes>
        						<include>**/po/**/*</include>
        						<include>**/dao/*IdGenerator*</include>
        					</includes>
        					<excludes>
        						<exclude>**/%regex[.*\$\{exclude.dir\}.+/]/**/*</exclude>
        					</excludes>
    					</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>component-logic</id>
			<activation>
				<property>
					<name>component</name>
  					<value>logic</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
    					<artifactId>maven-jar-plugin</artifactId>
    					<version>2.4</version>
    					<configuration>
    						<classifier>logic</classifier>
    						<outputDirectory>D:\BONC-NewMVN3\output</outputDirectory>
    						<includes>
    							<include>**/po/**/*</include>
    							<include>**/dao/**/*</include>
    							<include>**/bean/**/*</include>
    							<include>**/logic/**/*</include>
    							<include>${exclude.dir}/**/*</include>
    						</includes>
    						<excludes>
    							<exclude>${exclude.dir}/struts*.xml</exclude>
    							<exclude>**/%regex[.*\$\{exclude.dir\}.+/]/**/*</exclude>
    						</excludes>
    					</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>component-facade</id>
			<activation>
				<property>
					<name>component</name>
  					<value>facade</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
    					<artifactId>maven-jar-plugin</artifactId>
    					<version>2.4</version>
    					<configuration>
    						<classifier>facade</classifier>
    						<outputDirectory>D:\BONC-NewMVN3\output</outputDirectory>
    						<includes>
    							<include>**/resource/**/*</include>
    							<include>${exclude.dir}/**/*</include>
    							<include>resources/**/*</include>
    						</includes>
    						<excludes>
        						<exclude>**/%regex[.*\$\{exclude.dir\}.+/]/**/*</exclude>
        					</excludes>
    					</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>